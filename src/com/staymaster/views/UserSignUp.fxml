<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="670.0" prefWidth="988.0" style="-fx-background-color: linear-gradient(to bottom, #d9f2f9, #86c8d6);" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.staymaster.controllers.UserSignUpController">
   <children>
      <ImageView fitHeight="670.0" fitWidth="472.0">
         <image>
            <Image url="@../../../../Icons&amp;Images/Images/guest-add.jpg" />
         </image>
      </ImageView>

      <AnchorPane layoutX="472.0" prefHeight="670.0" prefWidth="516.0" style="-fx-background-color: #ffffff;">
         <children>
            <Text layoutX="50.0" layoutY="50.0" text="User Sign Up" style="-fx-font-size: 30px; -fx-font-weight: bold; -fx-text-fill: #003366;" />
            <Text layoutX="50.0" layoutY="80.0" text="Create your account" style="-fx-font-size: 16px; -fx-text-fill: #6c757d;" />

            <VBox layoutX="50.0" layoutY="100.0" spacing="15.0" prefWidth="400.0">
               <children>
                  <TextField fx:id="firstNameTxt" promptText="First Name" style="-fx-background-color: #f8f9fa; -fx-border-radius: 10px; -fx-background-radius: 10px; -fx-padding: 10px;" />
                  <TextField fx:id="lastNameTxt" promptText="Last Name" style="-fx-background-color: #f8f9fa; -fx-border-radius: 10px; -fx-background-radius: 10px; -fx-padding: 10px;" />
                  <TextField fx:id="addressTxt" promptText="Address" style="-fx-background-color: #f8f9fa; -fx-border-radius: 10px; -fx-background-radius: 10px; -fx-padding: 10px;" />
                  <TextField fx:id="genderTxt" promptText="Gender" style="-fx-background-color: #f8f9fa; -fx-border-radius: 10px; -fx-background-radius: 10px; -fx-padding: 10px;" />
                  <TextField fx:id="phoneNumberTxt" promptText="Phone Number" style="-fx-background-color: #f8f9fa; -fx-border-radius: 10px; -fx-background-radius: 10px; -fx-padding: 10px;" />
                  <TextField fx:id="dobTxt" promptText="Date of Birth" style="-fx-background-color: #f8f9fa; -fx-border-radius: 10px; -fx-background-radius: 10px; -fx-padding: 10px;" />
                  <TextField fx:id="emailTxt" promptText="Email" style="-fx-background-color: #f8f9fa; -fx-border-radius: 10px; -fx-background-radius: 10px; -fx-padding: 10px;" />
                  <PasswordField fx:id="passwordTxt" promptText="Password" style="-fx-background-color: #f8f9fa; -fx-border-radius: 10px; -fx-background-radius: 10px; -fx-padding: 10px;" />
                  <PasswordField fx:id="confirmPasswordTxt" promptText="Confirm Password" style="-fx-background-color: #f8f9fa; -fx-border-radius: 10px; -fx-background-radius: 10px; -fx-padding: 10px;" />
               </children>
            </VBox>

            <VBox layoutX="50.0" layoutY="560.0" spacing="15.0" alignment="CENTER" prefWidth="400.0">
               <children>
                  <Button fx:id="SignUpBtn" text="Sign Up" onAction="#handleSignupUserToDb" prefWidth="150.0" style="-fx-background-color: #003366; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 10px; -fx-padding: 10px;">
                     <effect>
                        <DropShadow color="#003366" radius="5.0" />
                     </effect>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
                  
                  <Button fx:id="BackBtn" text="Back" onAction="#handleBackButton" prefWidth="150.0" style="-fx-background-color: #C70039; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 10px; -fx-padding: 10px;">
                     <effect>
                        <DropShadow color="#C70039" radius="5.0" />
                     </effect>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
               </children>
            </VBox>
         </children>
      </AnchorPane>
   </children>
</AnchorPane>